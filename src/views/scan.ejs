<!-- scan.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Scan Results - DocuVerify</title>
  <style>
    :root {
      --primary: #4a6fa5;
      --primary-light: #5d82bb;
      --primary-dark: #3b5a86;
      --secondary: #6c757d;
      --light: #f8f9fa;
      --dark: #343a40;
      --success: #28a745;
      --warning: #f4c721;
      --danger: #dc3545;
      --border-radius: 8px;
      --box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      --transition: all 0.3s ease;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      line-height: 1.6;
      color: #333;
      background-color: #f5f7fa;
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 1.5rem;
    }

    .page-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
    }

    .page-title {
      font-size: 1.75rem;
      font-weight: 600;
      color: var(--dark);
      margin: 0;
    }

    .back-button {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      background-color: var(--light);
      color: var(--dark);
      border: 1px solid #dee2e6;
      padding: 0.5rem 1rem;
      border-radius: var(--border-radius);
      text-decoration: none;
      font-weight: 500;
      transition: var(--transition);
    }

    .back-button:hover {
      background-color: #e2e6ea;
    }

    .card {
      background-color: white;
      border-radius: var(--border-radius);
      box-shadow: var(--box-shadow);
      overflow: hidden;
      margin-bottom: 2rem;
      border: 1px solid #e9ecef;
    }

    .card-header {
      background-color: #f8f9fa;
      padding: 1rem 1.5rem;
      border-bottom: 1px solid #e9ecef;
    }

    .card-title {
      margin: 0;
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--dark);
    }

    .card-body {
      padding: 1.5rem;
    }

    .file-info {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
    }

    .file-info-item {
      border-left: 4px solid var(--primary);
      padding-left: 1rem;
      margin-bottom: 1rem;
    }

    .file-info-label {
      color: var(--secondary);
      font-size: 0.875rem;
      margin-bottom: 0.25rem;
    }

    .file-info-value {
      font-weight: 500;
      word-break: break-word;
    }

    .file-content {
      margin-top: 1.5rem;
      background-color: #f8f9fa;
      padding: 1rem;
      border-radius: var(--border-radius);
      border: 1px solid #e9ecef;
      max-height: 200px;
      overflow-y: auto;
      font-family: monospace;
      white-space: pre-wrap;
      font-size: 0.875rem;
    }

    .match-table {
      width: 100%;
      border-collapse: collapse;
    }

    .match-table th,
    .match-table td {
      padding: 1rem;
      text-align: left;
      border-bottom: 1px solid #e9ecef;
    }

    .match-table th {
      background-color: #f8f9fa;
      font-weight: 600;
      color: var(--secondary);
    }

    .match-table tr:hover {
      background-color: #f8f9fa;
    }

    .similarity-badge {
      display: inline-block;
      padding: 0.25rem 0.5rem;
      border-radius: 4px;
      font-weight: 600;
      font-size: 0.875rem;
    }

    .similarity-high {
      background-color: rgba(220, 53, 69, 0.1);
      color: var(--danger);
    }

    .similarity-medium {
      background-color: rgba(244, 199, 33, 0.1);
      color: #d4ac0d;
    }

    .similarity-low {
      background-color: rgba(40, 167, 69, 0.1);
      color: var(--success);
    }

    .view-button {
      display: inline-block;
      background-color: var(--primary);
      color: white;
      padding: 0.375rem 0.75rem;
      border-radius: var(--border-radius);
      text-decoration: none;
      font-weight: 500;
      transition: var(--transition);
      text-align: center;
    }

    .view-button:hover {
      background-color: var(--primary-dark);
    }

    .empty-state {
      text-align: center;
      padding: 3rem 1.5rem;
      color: var(--secondary);
    }

    .empty-state-icon {
      font-size: 3rem;
      margin-bottom: 1rem;
      color: #dee2e6;
    }

    .empty-state-text {
      font-size: 1rem;
      margin-bottom: 1.5rem;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
      .file-info {
        grid-template-columns: 1fr;
      }
      
      .match-table th:nth-child(3),
      .match-table td:nth-child(3) {
        display: none;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="page-header">
      <h1 class="page-title">Scan Results</h1>
      <a href="/profile" class="back-button">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        Back to Profile
      </a>
    </div>

    <div class="card">
      <div class="card-header">
        <h2 class="card-title">Current Document</h2>
      </div>
      <div class="card-body">
        <div class="file-info">
          <div>
            <div class="file-info-item">
              <div class="file-info-label">Filename</div>
              <div class="file-info-value"><%= file.filename %></div>
            </div>
            <div class="file-info-item">
              <div class="file-info-label">File Type</div>
              <div class="file-info-value"><%= file.mimetype %></div>
            </div>
          </div>
          <div>
            <div class="file-info-item">
              <div class="file-info-label">Size</div>
              <div class="file-info-value"><%= (file.size / 1024).toFixed(2) %> KB</div>
            </div>
            <div class="file-info-item">
              <div class="file-info-label">Uploaded At</div>
              <div class="file-info-value"><%= new Date(file.uploaded_at).toLocaleString() %></div>
            </div>
          </div>
        </div>
        
        <% if (file.content && file.content.length > 0) { %>
          <div class="file-content">
            <%= file.content ?? ' ' %>
          </div>
        <% } %>
      </div>
    </div>

    <div class="card">
      <div class="card-header">
        <h2 class="card-title">Similarity Matches</h2>
      </div>
      <div class="card-body">
        <% if (matches && matches.length > 0) { %>
          <table class="match-table">
            <thead>
              <tr>
                <th>Filename</th>
                <th>Similarity Score</th>
                <th>File Type</th>
                <th>Size</th>
                <th>Uploaded At</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% matches.forEach(match => { %>
                <tr>
                  <td><%= match.filename %></td>
                  <td>
                    <% 
                      let similarityClass = 'similarity-low';
                      if (match.similarity_score > 0.7) {
                        similarityClass = 'similarity-high';
                      } else if (match.similarity_score > 0.4) {
                        similarityClass = 'similarity-medium';
                      }
                    %>
                    <span class="similarity-badge <%= similarityClass %>">
                      <%= (match.similarity_score * 100).toFixed(1) %>%
                    </span>
                  </td>
                  <td><%= match.mimetype %></td>
                  <td><%= (match.size / 1024).toFixed(2) %> KB</td>
                  <td><%= new Date(match.uploaded_at).toLocaleString() %></td>
                  <td>
                    <a href="/scans/<%= match.id %>" class="view-button">View</a>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        <% } else { %>
          <div class="empty-state">
            <div class="empty-state-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                <path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z"></path>
                <polyline points="13 2 13 9 20 9"></polyline>
              </svg>
            </div>
            <div class="empty-state-text">No similar documents found</div>
          </div>
        <% } %>
      </div>
    </div>

    <script>
      // Format dates if needed
      document.addEventListener('DOMContentLoaded', function() {
        // Add any client-side functionality here
      });
    </script>
  </div>
</body>
</html>
